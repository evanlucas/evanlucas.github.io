mixin row(name, desc, lang, url)
  tr.item
    td
      a(href=url).thref #{name}
    td.desc #{desc}
    td.lang #{lang}

mixin crow(name, display, url)
  tr.item
    td #{name}
    td.desc
      a(href=url).thref #{display}


html
  head
    title evanlucas.com
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css')
    link(rel='stylesheet', href='style.css')
  body
    header
      h4
        span.folder
          img(src='folder.svg', height=15)
        | fish ~/evanlucas.com -- &#8984;1
      ul.btns
        li.red
        li.yellow
        li.green

    #projects
      p.branch development
      p.title ~/projects
      span.prompt1
      span.prompt2
      span.ls $ ls -la | tail -6
      br
      table.items
        +row(
          'eyearesee',
          'IRC Client using Electron',
          'js',
          'https://github.com/evanlucas/eyearesee'
        )
        +row(
          'gcr',
          'Gitlab CI Runner for node',
          'js',
          'https://github.com/evanlucas/gcr'
        )
        +row(
          'learnyoumongo',
          'Nodeschool workshop for MongoDB',
          'js',
          'https://github.com/evanlucas/learnyoumongo'
        )
        +row(
          'nodengine-hl7',
          'HL7 parser for node',
          'js',
          'https://github.com/evanlucas/nodengine-hl7'
        )
        +row(
          'node-launchctl',
          'Native bindings to launchctl commands for node',
          'c++, js',
          'https://github.com/evanlucas/node-launchctl'
        )
        +row(
          'dam',
          'Man for markdown',
          'js',
          'https://github.com/evanlucas/dam'
        )
        +row(
          'IconBounce',
          'iOS Tweak to make your dock icons bounce',
          'objective-c, logos',
          'https://github.com/evanlucas/IconBounce'
        )
    #slides
      p.branch development
      p.title ~/slides
      span.prompt1
      span.prompt2
      span.ls $ ls -la
      br
      table.items
        tr.item
          td
            a(href='slides/learnyoumongo.pdf').thref Learn You Mongo
          td.desc Slides from Austin NodeSchool
          td.lang (06/02/2015)
        tr.item
          td
            a(href='slides/edge_atx_oct_15.pdf').thref The road four node
          td.desc Slides from EdgeATX Meetup
          td.lang (10/28/2015)
        tr.item
          td
            a(href='slides/all_about_node_6.html').thref All about node 6
          td.desc Slides from EdgeATX Meetup
          td.lang (05/25/2016)
    #contact
      p.branch master
      p.title ~/contact
      span.prompt1
      span.prompt2
      span.ls $ ls -l
      br
      table.items
        +crow('twitter', '@evanhlucas', 'https://twitter.com/evanhlucas')
        +crow('github', 'evanlucas', 'https://github.com/evanlucas')
        +crow('email', 'evanlucas@me.com', 'mailto:evanlucas@me.com')
    #about
      p.branch me
      p.title ~/about
      span.prompt1
      span.prompt2
      span.ls $ man me
      br
      .about
        .right ME(1)
        h4.top ME(1)
        h4 NAME
        p Evan Lucas

        h4 DESCRIPTION
        p I like to write javascript and hack on&nbsp;
          a(href="https://github.com/nodejs/node").thref node
          |  and other open source projects in my free time.

        h4 BUGS
        p I'm sure there are many...report them please :]

        .foot
          span.end (END)&nbsp;
          span.right ME(1)
          .date February 2016
    #terminal-history
    #terminal
      p.branch master
      p.title ~
      span.prompt1
      span.prompt2
      span.ls $&nbsp;
      span.cursor.inactive &nbsp;
      input(type='text', autocorrect='off', autocapitalize='off').terminal-input
      br
    script(type='text/javascript', src='bundle.js')
